@model StoreDataInDB.Models.StudentModel

@{
    Layout = "null";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>StudentModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            <form method="post" asp-action="AddNewStudent" asp-controller="Student">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <label asp-for="Branch" class="control-label"></label>
                    <select asp-for="Branch" class="form-control" asp-items="ViewBag.Language">
                        <options value=""> please choose your branch</options>                       
                    </select>
                    <span asp-validation-for="Branch" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" required />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

</body>
</html>
